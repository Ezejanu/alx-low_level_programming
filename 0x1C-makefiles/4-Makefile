#The compiler to be used
CC = gcc

#The compiler flags
CFLAGS = -Wall -Werror -Wextra -pedantic

#The name of the executable
NAME = school

#The source files(.c)
SRC = main.c school.c

#The object files(.o)
OBJ = $(SRC:.c =.o)

#The program to delete files
RM = rm -f

all : $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean : $(RM) *~ .*sw? $(NAME)
oclean : $(RM) $(OBJ)
fclean : clean oclean
re : oclean all
